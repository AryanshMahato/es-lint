{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": 0,
    "jsx-quotes": 0,
    "react/prefer-stateless-function": 0,
    "no-undef": 0,
    "linebreak-style": 0,
    "react/state-in-constructor": 0,
    "guard-for-in": 0,
    "no-unused-vars": 0,
    "react/destructuring-assignment": 0,
    "react/no-access-state-in-setstate": 0,
    "no-plusplus": 0,
    "comma-dangle": 0,
    "react/jsx-one-expression-per-line": 0,
    "implicit-arrow-linebreak": 0,
    "react/jsx-curly-newline": 0,
    "react/prop-types": 0 //Remember to remove this
  }
}
